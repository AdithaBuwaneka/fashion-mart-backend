# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_strong_password_here
DB_NAME=fashionmart

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Authentication (Clerk) - REQUIRED IN PRODUCTION
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# JWT Configuration - MUST BE 32+ CHARACTERS IN PRODUCTION
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_32_chars

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=FashionMart

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=./config/google-vision-credentials.json

# Security Note: Never commit the actual .env file to version control
# All secrets should be unique and strong in production
# Use environment-specific values for different deployment stages